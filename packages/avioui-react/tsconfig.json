{
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "allowJs": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
